---
export const prerender = true;

import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getTranslations } from '../../../i18n';

const lang = 'en';
const t = getTranslations(lang);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<BaseLayout
  title="Speech Therapy Documentation - Nordhealth Nora"
  description="AI-powered documentation for speech and language therapists. Capture session details in real time while staying focused on your patient. GDPR-compliant, EU-hosted."
  lang={lang}
  t={t}
  canonicalPath="solutions"
  headerVariant="light"
  activePage="solutions"
  bodyClass="solutions-page"
>
  <!-- Hero Section -->
  <section class="solutions-hero section">
    <div class="solutions-hero-container">
      <div class="solutions-hero-content fade-in-up" data-animation-delay="0.1s">
        <h1 class="solutions-hero-title">
          {t.solutions.hero.title}
        </h1>
        <p class="solutions-hero-description">
          {t.solutions.hero.description}
        </p>
      </div>
      <div class="solutions-hero-image fade-in-up" data-animation-delay="0.2s">
        <img
          src={`${base}/images/solutions_hero.png`}
          alt="Healthcare professionals using Nordhealth Nora"
          fetchpriority="high"
        />
      </div>
    </div>
  </section>

  <!-- How Nora Supports You Section -->
  <section class="solutions-support section">
    <div class="solutions-support-container">
      <div class="solutions-support-top fade-in-up" data-animation-delay="0.1s">
        <div class="solutions-support-header">
          <h2 class="solutions-support-heading">
            {t.solutions.features.heading}
          </h2>
          <p class="solutions-support-description">
            {t.solutions.features.description}
          </p>
        </div>
        <div class="solutions-support-image">
          <img
            src={`${base}/images/how_nora_supports_you.png`}
            alt="Nordhealth Nora clinical documentation interface"
            loading="lazy"
          />
        </div>
      </div>

      <div class="solutions-support-cards fade-in-up" data-animation-delay="0.2s">
          <div class="solutions-support-card">
            <div class="solutions-support-card-icon">
              <svg viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 0C15.52 0 20 4.48 20 10C20 15.52 15.52 20 10 20C4.48 20 0 15.52 0 10C0 4.48 4.48 0 10 0ZM8.29 14.29L15.29 7.29C15.68 6.9 15.68 6.27 15.29 5.88C14.9 5.49 14.27 5.49 13.88 5.88L7.58 12.17L5.71 10.29C5.32 9.9 4.69 9.9 4.3 10.29C3.91 10.68 3.91 11.31 4.3 11.7L6.88 14.29C7.27 14.68 7.9 14.68 8.29 14.29Z" fill="white"/>
              </svg>
            </div>
            <div class="solutions-support-card-content">
              <h3>{t.solutions.features.liveCapture.title}</h3>
              <p>{t.solutions.features.liveCapture.description}</p>
            </div>
          </div>

          <div class="solutions-support-card">
            <div class="solutions-support-card-icon">
              <svg viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 0C15.52 0 20 4.48 20 10C20 15.52 15.52 20 10 20C4.48 20 0 15.52 0 10C0 4.48 4.48 0 10 0ZM8.29 14.29L15.29 7.29C15.68 6.9 15.68 6.27 15.29 5.88C14.9 5.49 14.27 5.49 13.88 5.88L7.58 12.17L5.71 10.29C5.32 9.9 4.69 9.9 4.3 10.29C3.91 10.68 3.91 11.31 4.3 11.7L6.88 14.29C7.27 14.68 7.9 14.68 8.29 14.29Z" fill="white"/>
              </svg>
            </div>
            <div class="solutions-support-card-content">
              <h3>{t.solutions.features.structuredDrafts.title}</h3>
              <p>{t.solutions.features.structuredDrafts.description}</p>
            </div>
          </div>

          <div class="solutions-support-card">
            <div class="solutions-support-card-icon">
              <svg viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 0C15.52 0 20 4.48 20 10C20 15.52 15.52 20 10 20C4.48 20 0 15.52 0 10C0 4.48 4.48 0 10 0ZM8.29 14.29L15.29 7.29C15.68 6.9 15.68 6.27 15.29 5.88C14.9 5.49 14.27 5.49 13.88 5.88L7.58 12.17L5.71 10.29C5.32 9.9 4.69 9.9 4.3 10.29C3.91 10.68 3.91 11.31 4.3 11.7L6.88 14.29C7.27 14.68 7.9 14.68 8.29 14.29Z" fill="white"/>
              </svg>
            </div>
            <div class="solutions-support-card-content">
              <h3>{t.solutions.features.consistentPhrasing.title}</h3>
              <p>{t.solutions.features.consistentPhrasing.description}</p>
            </div>
          </div>

          <div class="solutions-support-card">
            <div class="solutions-support-card-icon">
              <svg viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 0C15.52 0 20 4.48 20 10C20 15.52 15.52 20 10 20C4.48 20 0 15.52 0 10C0 4.48 4.48 0 10 0ZM8.29 14.29L15.29 7.29C15.68 6.9 15.68 6.27 15.29 5.88C14.9 5.49 14.27 5.49 13.88 5.88L7.58 12.17L5.71 10.29C5.32 9.9 4.69 9.9 4.3 10.29C3.91 10.68 3.91 11.31 4.3 11.7L6.88 14.29C7.27 14.68 7.9 14.68 8.29 14.29Z" fill="white"/>
              </svg>
            </div>
            <div class="solutions-support-card-content">
              <h3>{t.solutions.features.playFriendly.title}</h3>
              <p>{t.solutions.features.playFriendly.description}</p>
            </div>
          </div>

          <div class="solutions-support-card">
            <div class="solutions-support-card-icon">
              <svg viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 0C15.52 0 20 4.48 20 10C20 15.52 15.52 20 10 20C4.48 20 0 15.52 0 10C0 4.48 4.48 0 10 0ZM8.29 14.29L15.29 7.29C15.68 6.9 15.68 6.27 15.29 5.88C14.9 5.49 14.27 5.49 13.88 5.88L7.58 12.17L5.71 10.29C5.32 9.9 4.69 9.9 4.3 10.29C3.91 10.68 3.91 11.31 4.3 11.7L6.88 14.29C7.27 14.68 7.9 14.68 8.29 14.29Z" fill="white"/>
              </svg>
            </div>
            <div class="solutions-support-card-content">
              <h3>{t.solutions.features.fullControl.title}</h3>
              <p>{t.solutions.features.fullControl.description}</p>
            </div>
          </div>
        </div>
      </div>
  </section>

