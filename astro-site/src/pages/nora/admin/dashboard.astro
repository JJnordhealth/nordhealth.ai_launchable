---
export const prerender = false;

import { getUserFromRequest } from '../../../lib/auth.js';
import fs from 'fs';
import path from 'path';

const user = getUserFromRequest(Astro.request);
if (!user) {
  return Astro.redirect('/nora/admin/');
}

// Load static i18n files
const i18nDir = path.join(process.cwd(), 'src/i18n');
const languages = ['en', 'fi', 'no', 'dk'];
const staticI18n = {};

for (const lang of languages) {
  const filePath = path.join(i18nDir, `${lang}.json`);
  staticI18n[lang] = JSON.parse(fs.readFileSync(filePath, 'utf-8'));
}

// Filter languages for non-admin users
const allowedLangs = user.role === 'admin' ? languages : user.allowed_langs.filter(l => languages.includes(l));
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Nora Admin - Dashboard</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f3f4f6;
      min-height: 100vh;
    }
    .header {
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      color: white;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 100;
    }
    .header h1 { font-size: 20px; font-weight: 600; }
    .header h1 span { color: #a5b4fc; }
    .header-right { display: flex; align-items: center; gap: 16px; }
    .user-info { font-size: 14px; color: #d1d5db; }
    .user-info strong { color: white; }
    .logout-btn {
      background: rgba(255,255,255,0.1);
      color: white;
      border: 1px solid rgba(255,255,255,0.2);
      padding: 8px 16px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
      transition: background 0.2s;
    }
    .logout-btn:hover { background: rgba(255,255,255,0.2); }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 24px;
    }

    .tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }
    .tab {
      padding: 12px 24px;
      background: white;
      border: 2px solid #e5e7eb;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 500;
      font-size: 14px;
      text-transform: uppercase;
      transition: all 0.2s;
    }
    .tab:hover { border-color: #667eea; }
    .tab.active {
      background: #667eea;
      border-color: #667eea;
      color: white;
    }

    .editor-container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      overflow: hidden;
    }

    .editor-header {
      padding: 16px 24px;
      border-bottom: 1px solid #e5e7eb;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .editor-header h2 { font-size: 18px; color: #1f2937; }
    .save-btn {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    .save-btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }
    .save-btn:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }

    .tree-container {
      padding: 16px 24px;
      max-height: calc(100vh - 280px);
      overflow-y: auto;
    }

    .tree-node {
      margin-left: 0;
    }
    .tree-node.nested {
      margin-left: 24px;
      border-left: 2px solid #e5e7eb;
      padding-left: 16px;
    }

    .node-header {
      display: flex;
      align-items: center;
      padding: 8px 12px;
      margin: 4px 0;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.15s;
    }
    .node-header:hover { background: #f9fafb; }
    .node-header.branch { font-weight: 600; color: #374151; }
    .node-header.leaf { font-weight: 400; }

    .expand-icon {
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 8px;
      color: #9ca3af;
      transition: transform 0.2s;
    }
    .expand-icon.expanded { transform: rotate(90deg); }
    .expand-icon.hidden { visibility: hidden; }

    .node-key {
      color: #6366f1;
      font-family: 'SF Mono', Monaco, monospace;
      font-size: 13px;
      margin-right: 12px;
      min-width: 150px;
    }

    .node-value {
      flex: 1;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .value-display {
      color: #374151;
      font-size: 14px;
      max-width: 500px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .value-input {
      flex: 1;
      padding: 8px 12px;
      border: 2px solid #667eea;
      border-radius: 6px;
      font-size: 14px;
      font-family: inherit;
    }
    .value-input:focus { outline: none; border-color: #4f46e5; }

    .edit-btn, .save-field-btn, .cancel-btn, .revert-btn {
      padding: 4px 12px;
      border-radius: 4px;
      font-size: 12px;
      cursor: pointer;
      border: none;
      transition: background 0.15s;
    }
    .edit-btn { background: #e0e7ff; color: #4338ca; }
    .edit-btn:hover { background: #c7d2fe; }
    .save-field-btn { background: #d1fae5; color: #065f46; }
    .save-field-btn:hover { background: #a7f3d0; }
    .cancel-btn { background: #f3f4f6; color: #6b7280; }
    .cancel-btn:hover { background: #e5e7eb; }
    .revert-btn { background: #fef3c7; color: #92400e; }
    .revert-btn:hover { background: #fde68a; }

    .override-badge {
      background: #fef3c7;
      color: #92400e;
      font-size: 10px;
      padding: 2px 6px;
      border-radius: 4px;
      font-weight: 600;
    }

    .children { display: none; }
    .children.expanded { display: block; }

    .toast {
      position: fixed;
      bottom: 24px;
      right: 24px;
      padding: 16px 24px;
      border-radius: 8px;
      color: white;
      font-weight: 500;
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.3s;
      z-index: 1000;
    }
    .toast.show { opacity: 1; transform: translateY(0); }
    .toast.success { background: #10b981; }
    .toast.error { background: #ef4444; }

    .search-box {
      padding: 12px 16px;
      border: 2px solid #e5e7eb;
      border-radius: 8px;
      font-size: 14px;
      width: 300px;
    }
    .search-box:focus { outline: none; border-color: #667eea; }
  </style>
</head>
<body>
  <header class="header">
    <h1>Nordhealth <span>Nora</span> CMS</h1>
    <div class="header-right">
      <span class="user-info">
        Logged in as <strong>{user.username}</strong>
        ({user.role === 'admin' ? 'Administrator' : `Regional: ${user.allowed_langs.join(', ').toUpperCase()}`})
      </span>
      <button class="logout-btn" id="logoutBtn">Logout</button>
    </div>
  </header>

  <div class="container">
    <div class="tabs" id="langTabs">
      {allowedLangs.map((lang, i) => (
        <button class={`tab ${i === 0 ? 'active' : ''}`} data-lang={lang}>
          {lang.toUpperCase()}
        </button>
      ))}
    </div>

    <div class="editor-container">
      <div class="editor-header">
        <div style="display: flex; align-items: center; gap: 16px;">
          <h2 id="editorTitle">{allowedLangs[0].toUpperCase()} Translation Strings</h2>
          <input type="text" class="search-box" id="searchBox" placeholder="Search keys...">
        </div>
      </div>
      <div class="tree-container" id="treeContainer">
        <!-- Tree will be rendered here -->
      </div>
    </div>
  </div>

  <div id="toast" class="toast"></div>

  <script define:vars={{ staticI18n, allowedLangs, userRole: user.role }}>
    let currentLang = allowedLangs[0];
    let overrides = {};
    let pendingChanges = {};

    // Initialize
    document.addEventListener('DOMContentLoaded', async () => {
      await loadOverrides(currentLang);
      renderTree(currentLang);
      setupEventListeners();
    });

    function setupEventListeners() {
      // Tab switching
      document.querySelectorAll('.tab').forEach(tab => {
        tab.addEventListener('click', async () => {
          document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
          tab.classList.add('active');
          currentLang = tab.dataset.lang;
          document.getElementById('editorTitle').textContent = `${currentLang.toUpperCase()} Translation Strings`;
          await loadOverrides(currentLang);
          renderTree(currentLang);
        });
      });

      // Logout
      document.getElementById('logoutBtn').addEventListener('click', async () => {
        await fetch('/api/auth/logout', { method: 'POST' });
        window.location.href = '/nora/admin/';
      });

      // Search
      document.getElementById('searchBox').addEventListener('input', (e) => {
        filterTree(e.target.value.toLowerCase());
      });
    }

    async function loadOverrides(lang) {
      try {
        const response = await fetch(`/api/i18n/${lang}`);
        const data = await response.json();
        overrides[lang] = {};
        if (data.overrides) {
          data.overrides.forEach(o => {
            overrides[lang][o.key_path] = o.value;
          });
        }
      } catch (err) {
        console.error('Failed to load overrides:', err);
        overrides[lang] = {};
      }
    }

    function renderTree(lang) {
      const container = document.getElementById('treeContainer');
      const data = staticI18n[lang];
      container.innerHTML = buildTreeHTML(data, '', lang);
    }

    function buildTreeHTML(obj, prefix, lang) {
      let html = '';
      for (const [key, value] of Object.entries(obj)) {
        const path = prefix ? `${prefix}.${key}` : key;
        const isObject = typeof value === 'object' && value !== null && !Array.isArray(value);
        const hasOverride = overrides[lang] && overrides[lang][path] !== undefined;

        if (isObject) {
          html += `
            <div class="tree-node ${prefix ? 'nested' : ''}" data-path="${path}">
              <div class="node-header branch" onclick="toggleNode(this)">
                <span class="expand-icon">▶</span>
                <span class="node-key">${key}</span>
              </div>
              <div class="children">
                ${buildTreeHTML(value, path, lang)}
              </div>
            </div>
          `;
        } else {
          const displayValue = hasOverride ? overrides[lang][path] : value;
          const valueStr = String(displayValue).replace(/</g, '&lt;').replace(/>/g, '&gt;');
          html += `
            <div class="tree-node ${prefix ? 'nested' : ''}" data-path="${path}">
              <div class="node-header leaf">
                <span class="expand-icon hidden">▶</span>
                <span class="node-key">${key}</span>
                <div class="node-value">
                  <span class="value-display" title="${valueStr}">${valueStr}</span>
                  ${hasOverride ? '<span class="override-badge">OVERRIDE</span>' : ''}
                  <button class="edit-btn" onclick="editField('${path}', this)">Edit</button>
                  ${hasOverride ? `<button class="revert-btn" onclick="revertField('${path}', '${lang}')">Revert</button>` : ''}
                </div>
              </div>
            </div>
          `;
        }
      }
      return html;
    }

    function toggleNode(header) {
      const icon = header.querySelector('.expand-icon');
      const children = header.nextElementSibling;
      if (children && children.classList.contains('children')) {
        children.classList.toggle('expanded');
        icon.classList.toggle('expanded');
      }
    }

    function editField(path, btn) {
      const nodeValue = btn.parentElement;
      const display = nodeValue.querySelector('.value-display');
      const currentValue = overrides[currentLang]?.[path] ?? getStaticValue(currentLang, path);

      nodeValue.innerHTML = `
        <input type="text" class="value-input" value="${String(currentValue).replace(/"/g, '&quot;')}">
        <button class="save-field-btn" onclick="saveField('${path}')">Save</button>
        <button class="cancel-btn" onclick="cancelEdit('${path}')">Cancel</button>
      `;
      nodeValue.querySelector('.value-input').focus();
    }

    function getStaticValue(lang, path) {
      const parts = path.split('.');
      let value = staticI18n[lang];
      for (const part of parts) {
        value = value?.[part];
      }
      return value;
    }

    async function saveField(path) {
      const input = document.querySelector(`[data-path="${path}"] .value-input`);
      const newValue = input.value;

      try {
        const response = await fetch(`/api/i18n/${currentLang}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ key_path: path, value: newValue })
        });

        if (response.ok) {
          if (!overrides[currentLang]) overrides[currentLang] = {};
          overrides[currentLang][path] = newValue;
          renderTree(currentLang);
          showToast('Saved successfully!', 'success');
        } else {
          const data = await response.json();
          showToast(data.error || 'Save failed', 'error');
        }
      } catch (err) {
        showToast('Connection error', 'error');
      }
    }

    function cancelEdit(path) {
      renderTree(currentLang);
    }

    async function revertField(path, lang) {
      if (!confirm('Revert to static value? This will remove the override.')) return;

      try {
        const response = await fetch(`/api/i18n/${lang}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ key_path: path, value: null })
        });

        if (response.ok) {
          delete overrides[lang][path];
          renderTree(lang);
          showToast('Reverted to static value', 'success');
        } else {
          showToast('Revert failed', 'error');
        }
      } catch (err) {
        showToast('Connection error', 'error');
      }
    }

    function filterTree(query) {
      const nodes = document.querySelectorAll('.tree-node');
      nodes.forEach(node => {
        const path = node.dataset.path.toLowerCase();
        const valueDisplay = node.querySelector('.value-display');
        const value = valueDisplay ? valueDisplay.textContent.toLowerCase() : '';

        if (path.includes(query) || value.includes(query)) {
          node.style.display = '';
          // Expand parents
          let parent = node.parentElement;
          while (parent) {
            if (parent.classList.contains('children')) {
              parent.classList.add('expanded');
              const parentIcon = parent.previousElementSibling?.querySelector('.expand-icon');
              if (parentIcon) parentIcon.classList.add('expanded');
            }
            parent = parent.parentElement;
          }
        } else if (!node.querySelector('.tree-node')) {
          // Only hide leaf nodes that don't match
          node.style.display = 'none';
        }
      });
    }

    function showToast(message, type) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.className = `toast ${type} show`;
      setTimeout(() => toast.classList.remove('show'), 3000);
    }

    // Make functions available globally
    window.toggleNode = toggleNode;
    window.editField = editField;
    window.saveField = saveField;
    window.cancelEdit = cancelEdit;
    window.revertField = revertField;
  </script>
</body>
</html>
